{
  "extends": ["plugin:playwright/recommended", "../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["src/**/*.{ts,js,tsx,jsx}"],
      "rules": {
        "testing-library/prefer-screen-queries": "off",
        "jest-dom/prefer-in-document": "off"
      }
    }
  ]
}
